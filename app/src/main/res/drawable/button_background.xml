<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3D5868" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#4CAF50"
                android:endColor="#087f23"
                android:type="linear"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
